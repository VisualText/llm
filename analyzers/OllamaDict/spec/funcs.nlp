@DECL

TallyAttr(L("attr")) {
    L("con") = getconcept(G("attrs"),L("attr"));
    IncrementCount(L("con"),"attr");
}

AddAttribute(L("word con"),L("attr node")) {
    L("type") = pnvar(L("attr node"),"type");
    if (L("type")) {
        L("value") = strtolower(pnvar(L("attr node"),"val"));
        if (L("type")) {
            if (L("type") == "conjugation") {
                L("do nothing") = 1;
            } else {
                addstrval(L("word con"),L("type"),L("value"));                
            }
        }       
    }
}

@@DECL